[fortran]

INTEGER i

DO i=LBOUND(x, 1), UBOUND(x, 1)
    z(i) = x(i) + y(i)
END DO

[fortran_openacc]

INTEGER i

!$acc parallel loop present(x, y, z)
DO i=LBOUND(x, 1), UBOUND(x, 1)
    z(i) = x(i) + y(i)
END DO
!$acc end parallel loop

[fortran_omptarget]

INTEGER i, start, stop

start = LBOUND(x, 1)
stop  = UBOUND(x, 1)

!$omp target teams distribute num_teams(stop-start+1)
DO i=start, stop
    z(i) = x(i) + y(i)
END DO
!$omp end target teams distribute


[cpp, cpp_openacc]

#pragma acc parallel loop
for (int i=0; i < JAI_LEN(x); i++) {
	z[i] = x[i] + j[i]
}
